  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f6f6f6;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .contact-container {
      background-color: #fff;
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      text-align: center;
      max-width: 400px;
    }

    h1 {
      color: #560bad;
      margin-bottom: 20px;
    }

    .info {
      margin-bottom: 15px;
      font-size: 18px;
      color: #333;
    }

    .info a {
      color: #560bad;
      text-decoration: none;
    }

    .info a:hover {
      text-decoration: underline;
    }

    .btn-custom {
      background-color: white;
      text-align: center;
      width: 192px;
      height: 56px;
      border-radius: 16px;
      position: relative;
      font-size: 20px;
      font-weight: 600;
      color: black;
      border: none;
      cursor: pointer;
      margin: 10px auto;
    }

    .btn-custom .inner {
      background-color: #4ade80;
      border-radius: 12px;
      height: 48px;
      width: 25%;
      display: flex;
      align-items: center;
      justify-content: center;
      position: absolute;
      left: 4px;
      top: 4px;
      z-index: 10;
      transition: width 0.5s;
    }

    .btn-custom:hover .inner {
      width: 184px;
    }

    .btn-custom svg {
      fill: black;
    }

    .btn-custom p {
      position: relative;
      z-index: 20;
      margin: 0;
      transform: translateX(8px);
    }
  </style>
</head>
